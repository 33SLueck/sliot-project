# Development Environment Configuration
NODE_ENV=development

# Database
POSTGRES_DB=sliot_cms
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
DATABASE_URL=postgresql://postgres:password@localhost:5434/sliot_cms

# Frontend URLs (internal container communication)
NEXT_PUBLIC_CMS_URL=http://localhost:4000
NEXT_PUBLIC_N8N_URL=http://localhost:5678

# Authentication (leave empty for development)
COGNITO_CLIENT_ID=
COGNITO_CLIENT_SECRET=
COGNITO_ISSUER=
NEXTAUTH_SECRET=development-secret-key
NEXTAUTH_URL=http://localhost:3000

# n8n Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_BASIC_AUTH_ACTIVE=false
N8N_DISABLE_USER_MANAGEMENT=false