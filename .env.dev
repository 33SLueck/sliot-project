# Development Environment Variables
NODE_ENV=development

# Ports
NEXTJS_PORT=3000
CMS_PORT=4000
N8N_PORT=5678
POSTGRES_PORT=5432

# Images (use local builds for development)
NEXTJS_IMAGE=sliot-project/nextjs:dev
CMS_IMAGE=sliot-project/cms:dev

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=mycms
DATABASE_URL=postgresql://postgres:password@db:5432/sliot_cms

# N8N Configuration
N8N_VERSION=latest
N8N_BIND=0.0.0.0
N8N_DATABASE=n8n
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin
N8N_HOST=localhost
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/

# NextJS URLs
NEXT_PUBLIC_CMS_URL=http://localhost:4000
NEXT_PUBLIC_N8N_URL=http://localhost:5678
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=development-secret-change-in-production

# AWS Configuration (optional for development)
AWS_REGION=eu-north-1