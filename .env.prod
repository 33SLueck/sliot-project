# Production Environment Variables
NODE_ENV=production

# Ports (nginx proxy handles external access)
NEXTJS_PORT=3000
CMS_PORT=4000
N8N_PORT=5678
POSTGRES_PORT=5432

# Images (use production images from registry)
NEXTJS_IMAGE=ghcr.io/33slueck/sliot-project/nextjs:latest
CMS_IMAGE=ghcr.io/33slueck/sliot-project/cms:latest

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=mycms
DATABASE_URL=postgresql://postgres:password@db:5432/sliot_cms

# N8N Configuration
N8N_VERSION=latest
N8N_BIND=127.0.0.1
N8N_DATABASE=n8n
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin
N8N_HOST=n8n.sliot.de
N8N_PROTOCOL=http
WEBHOOK_URL=https://n8n.sliot.de/
N8N_SECURE_COOKIE=true
N8N_EDITOR_BASE_URL=https://n8n.sliot.de/
N8N_EXTERNAL_FRONTEND_HOST=https://n8n.sliot.de
N8N_DISABLE_USER_MANAGEMENT=true
N8N_PUBLIC_API_DISABLED=true
N8N_LOG_LEVEL=warn

# NextJS URLs
NEXT_PUBLIC_CMS_URL=http://cms:4000
NEXT_PUBLIC_N8N_URL=http://n8n:5678
NEXTAUTH_URL=https://sliot.de

# AWS Configuration
AWS_REGION=eu-north-1

# Cognito Configuration (set via Parameter Store or environment)
# COGNITO_CLIENT_ID=
# COGNITO_CLIENT_SECRET=
# COGNITO_ISSUER=
# NEXTAUTH_SECRET=